<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:windowSoftInputMode="adjustPan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.TRY_US.StartActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ui_home_only_backpict"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/gotoTalkAlone"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ui_home_button_only"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/gotoTalkSomeone"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ui_home_button_only"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.859"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="242dp"
        app:layout_constraintTop_toBottomOf="@+id/gotoTalkAlone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/fab_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:miniFabBackgroundTint="@android:color/white"
        app:miniFabDrawableTint="?attr/colorPrimaryDark"
        app:miniFabTitleTextColor="?attr/colorPrimaryDark"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="557dp" >

    </io.github.yavski.fabspeeddial.FabSpeedDial>

    <Button
        android:id="@+id/informOfDangerous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="特定音検知"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.953"
        app:layout_constraintHorizontal_bias="0.169" />

</android.support.constraint.ConstraintLayout>


